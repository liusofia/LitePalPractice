<?xml version="1.0" encoding="utf-8"?>
<litepal>
    <!-- 数据库的名称-->
    <dbname value = "BookStore"></dbname>
    <!-- 指定数据库版本号 -->
    <!-- 如果使用LitePal每次更新数据库 版本号+1-->
    <version value = "3"></version>
    <list>
        <!-- list 用于指定所有映射模型 -->
        <!-- 声明我们要配置的映射模型类 完整的类名，不管有多少模型类需要映射，都用同样的方式配置在这里-->
        <mapping class="litepalpractice.sofia.com.litepalpractice.Book"></mapping>

        <!-- 添加一张Category 表-->
        <!-- 每一个mapping class 都需要对应一个Class类 -->
        <mapping class="litepalpractice.sofia.com.litepalpractice.Category"></mapping>
    </list>
</litepal>
